@using DollarsAndSense.ModelViews;
@model DollarsAndSense.ModelViews.TestAccountsModel

@{
    ViewBag.Title = "Test";
    TestAccountsModel blank = ViewBag.Blank;
}

<h2>Various Tests</h2>

<div class="container">
    <div class="row">

        <div class="col-sm-4 col-xs-12">
            <div class="portlet">
                <form action="/Account/Add" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>StoredProc: AddBankAccount</h4>
                        <hr />
                        <div class="form-group">
                            @Html.Label("Name", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextBox("Name", blank.Name, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Acct #", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextBox("AccountNum", blank.AccountNum, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Desc", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextArea("Desc", blank.Desc, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("HHId", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.DropDownList("HouseholdId", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("RecBal", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextBox("ReconciledBalance", blank.ReconciledBalance, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("CkBal", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextBox("CheckbookBalance", blank.CheckbookBalance, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-9">
                                <input type="submit" value="Add" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /Account/Add -->

        <div class="col-sm-4 col-xs-12">
            <div class="portlet">
                <form action="/Account/Update" method="post">
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.Id)

                    <div class="form-horizontal">
                        <h4>StoredProc: UpdateAccountInfo - #@Model.Id</h4>
                        <hr />
                        <div class="form-group">
                            @Html.Label("Name", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Acct #", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.EditorFor(model => model.AccountNum, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AccountNum, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Desc", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextAreaFor(model => model.Desc, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Desc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("HHId", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.DropDownList("HouseholdId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.HouseholdId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("RecBal", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.EditorFor(model => model.ReconciledBalance, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ReconciledBalance, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("CkBal", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.EditorFor(model => model.CheckbookBalance, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CheckbookBalance, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-9">
                                <input type="submit" value="Update" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /Account/Update -->

        <div class="col-sm-4 col-xs-12">
            <div class="portlet">
                <form action="/Account" method="get">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>StoredProc: GetAccountInfo</h4>
                        <hr />
                        <div class="form-group">
                            @Html.Label("Id", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextBox("Id", 0, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-9">
                                <input type="submit" value="Get Info" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /Account (get info) -->

        <div class="col-sm-4 col-xs-12">
            <div class="portlet">
                <form action="/Account/Household" method="get">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>StoredProc: GetAccountsForHousehold</h4>
                        <hr />
                        <div class="form-group">
                            @Html.Label("HHId", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.DropDownList("HouseholdId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.HouseholdId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-9">
                                <input type="submit" value="Get Info" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /Account/Household (get info) -->
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
